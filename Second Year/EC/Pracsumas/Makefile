###############################################################################
# Makefile
###############################################################################

SHELL = /bin/bash # for ubuntu

###############################################################################

ASM = $(wildcard *.s)
EXE = $(basename $(ASM))
ATT = $(EXE:=.att)

###############################################################################

ASFLAGS = -fno-omit-frame-pointer -g -m32 -nostartfiles

###############################################################################

default: $(EXE)

all: 	default $(ATT)

clean:
	$(RM) -rfv $(ATT) $(EXE) core.* *~

###############################################################################

%.att:	%
	objdump -C -d $< > $@

###############################################################################

.PHONY: all clean default

